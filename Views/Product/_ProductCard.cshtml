@model Product

<div class="col-md-4 my-3">
	<div class="card" style="width: 18rem;">
		<img src="images/dil.png" width="50%" height="auto" class="card-img-top" alt="...">
		<div class="card-body">
			<h5 class="card-title">@Model.ProductName</h5>
			<p class="card-text">@Model.Description</p>
			<a asp-action="Get" asp-route-id="@Model.ProductId" class="btn btn-warning">
				<i class="fa-solid fa-arrow-right"></i>
				Go somewhere</a>
		</div>
	</div>
</div>


