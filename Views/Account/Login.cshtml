
@model EmptyCoreWebApplication.Models.LoginModel

<div class="text-center my-5">
	<h6 class="display-6">
		<i class="fa-solid text-white fa-right-to-bracket bg-secondary p-3 rounded-5"></i>
		<br/>
		Login</h6>
</div>

<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<div>
			<div class="text-danger" asp-validation-summary="All"></div>
		</div>
		<form method="post" asp-action="Login">
			<div class="form-group my-3">
				<label asp-for="Email"></label>
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="form-group my-3">
				<label asp-for="Password"></label>
				<input type="password" asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="form-group my-3 d-flex justify-content-center">
				<input asp-for="RememberMe" class="form-check-input" />
				<label asp-for="RememberMe" class="form-check-label"></label>
				<br />
				<button type="submit" class="btn btn-primary">
					<i class="fa-solid fa-right-to-bracket"></i>
					Login
				</button>
			</div>
		</form>
		<div>
			If you don't have an account, please click here to access <a asp-controller="Register" asp-action="Register">registration page.</a>
			
		</div>

	</div>
	<div class="col-md-3"></div>
</div>
